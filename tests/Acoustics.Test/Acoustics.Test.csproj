    <AssemblyTitle>Acoustics.Test</AssemblyTitle>
    <Product>Acoustics.Test</Product>

    <OutputPath>bin\$(Configuration)\</OutputPath>
    <RunSettingsFilePath>$(MSBuildThisFileDirectory).runsettings</RunSettingsFilePath>
