<?xml version="1.0" encoding="utf-8" ?>
<log4net>

  <logger name="Acoustics.Tools.Audio" additivity="false">
    <level value="OFF" />
  </logger>
  
  <root>
    <!-- possible values for logging levels: ALL DEBUG INFO WARN ERROR FATAL OFF -->
    <level value="ALL" />
    <appender-ref ref="RollingLogFileAppender" />
    <appender-ref ref="RichTextBoxAppender" />
  </root>
  
  <!-- Log to a rolling file. -->
  <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="Logs\log.txt" />
    <appendToFile value="true" />
    <rollingStyle value="Once" />
    <datePattern value="yyyyMMdd_HHmmss" />
    <staticLogFileName value="false" />
    <maxSizeRollBackups value="50" />
    <maximumFileSize value="100KB" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{o} [%thread] %-5level %logger - %message%newline%exception" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="DEBUG" />
      <levelMax value="FATAL" />
    </filter>
  </appender>

  <!-- Log to a richtextbox.-->
  <appender name="RichTextBoxAppender" type="log4net.Appender.RichTextBoxAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%date{yyyy-MM-dd HH:mm:ss}] %-5level %logger - %message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="DEBUG" />
      <levelMax value="FATAL" />
    </filter>
    <filter type="log4net.Filter.LoggerMatchFilter">
      <loggerToMatch value="Acoustics.Tools.Audio" />
      <acceptOnMatch value="false" />
    </filter>
    <mapping>
      <level value="FATAL" />
      <textColorName value="Red" />
      <backColorName value="Black" />
    </mapping>
    <mapping>
      <level value="ERROR" />
      <textColorName value="DarkOrange" />
      <backColorName value="Black" />
    </mapping>
    <mapping>
      <level value="WARN" />
      <textColorName value="Yellow" />
      <backColorName value="Black" />
    </mapping>
    <mapping>
      <level value="INFO" />
      <textColorName value="LightSteelBlue" />
      <backColorName value="Black" />
    </mapping>
    <mapping>
      <level value="DEBUG" />
      <textColorName value="White" />
      <backColorName value="Black" />
    </mapping>
  </appender>
</log4net>