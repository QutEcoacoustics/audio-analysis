<?xml version="1.0" encoding="utf-8" ?>
<log4net>

  <root>
    <!-- possible values for logging levels: ALL DEBUG INFO WARN ERROR FATAL OFF -->
    <!-- This value is modified at run time based on command line arguments -->
    <!-- Do NOT set appender level filters! -->
    <level value="ALL" />
    <appender-ref ref="ConsoleAppender" />
  </root>


  <!-- Log to console.-->
  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%date{o}] %-5level - %message%newline%exception" />
    </layout>
    <!-- Kept for backwards compatibility. Used for pretty printing console logging. -->
    <filter type="log4net.Filter.LoggerMatchFilter">
      <loggerToMatch value="LoggedConsole" />
      <acceptOnMatch value="false" />
    </filter>
   <!-- A special logger that only logs to file -->
   <filter type="log4net.Filter.LoggerMatchFilter">
      <loggerToMatch value="LogFileOnly" />
      <acceptOnMatch value="false" />
    </filter>
    
  </appender>

</log4net>